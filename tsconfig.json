{
    "compilerOptions": {
        "lib": ["es2020"],
        "module": "commonjs",
        "target": "es2020",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "resolveJsonModule": true,
        "paths": {
            "@src/*": ["./src/*"],
            "@usecases/*": ["./src/use-cases/*"],
            "@controllers/*": ["./src/web-controllers/*"],
            "@entities/*": ["./src/entities/*"]
        }
    },
    "include": ["src/**/*", "tests/**/*"]
}
